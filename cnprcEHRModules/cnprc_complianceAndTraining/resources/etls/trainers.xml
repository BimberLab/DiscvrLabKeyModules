<?xml version="1.0" encoding="UTF-8"?>
<etl xmlns="http://labkey.org/etl/xml">
    <name>Trainers</name>
    <description>Trainers</description>
    <transforms>
        <transform id="step1" type="org.labkey.di.pipeline.TransformTask">
            <description>Copy to target</description>
            <source schemaName="cnprcSrc_complianceAndTraining" queryName="q_trainers"/>
            <destination schemaName="cnprc_complianceandtraining" queryName="trainers" bulkLoad="true" batchSize="500"
                         targetOption="truncate">
            </destination>
        </transform>
    </transforms>
    <schedule>
        <!-- run at 2:30 am everyday -->
        <cron expression="0 30 2 * * ? *"/> <!--seconds, minutes, hours, day-of-month, month, day-of-week, year(optional) -->
    </schedule>
</etl>