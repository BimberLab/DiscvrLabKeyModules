<?xml version="1.0" encoding="UTF-8"?>
<etl xmlns="http://labkey.org/etl/xml">
    <name>Perdiem Rates</name>
    <description>Perdiem Rates</description>
    <transforms>
        <transform id="step1" type="org.labkey.di.pipeline.TransformTask">
            <description>Copy to target</description>
            <source schemaName="cnprcSrc_billing_fin" queryName="q_perdiem_rates"/>
            <destination schemaName="cnprc_billing" queryName="perdiem_rates" bulkLoad="true" batchSize="500"
                         targetOption="merge">
                <alternateKeys>
                    <column name="Objectid"/>
                </alternateKeys>
            </destination>
        </transform>
    </transforms>
    <incrementalFilter className="ModifiedSinceFilterStrategy" timestampColumnName="date_time">
        <deletedRowsSource schemaName="cnprcSrc_billing_aud" queryName="q_perdiem_rates_delete" timestampColumnName="date_time"
                           deletedSourceKeyColumnName="objectid" targetKeyColumnName="objectid"/>
    </incrementalFilter>
    <schedule>
        <!-- run on 1st day of the Month at 1 am -->
        <cron expression="0 0 1 1 1/1 ? *"/> <!--seconds, minutes, hours, day-of-month, month, day-of-week, year(optional) -->
    </schedule>
</etl>