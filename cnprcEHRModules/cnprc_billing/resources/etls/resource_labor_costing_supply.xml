<?xml version="1.0" encoding="UTF-8"?>
<etl xmlns="http://labkey.org/etl/xml">
    <name>Resource Labor Costing Supply</name>
    <description>Cross table to relate multiple labor records to multiple items they are used in</description>
    <transforms>
        <transform id="step1" type="org.labkey.di.pipeline.TransformTask">
            <description>Copy to target</description>
            <source schemaName="cnprcSrc_billing" queryName="q_resource_labor_costing_supply" />
            <destination schemaName="cnprc_billing" queryName="resource_labor_costing_supply" bulkLoad="true" batchSize="5000" targetOption="merge">
                <alternateKeys>
                    <column name="objectid"/>
                </alternateKeys>
            </destination>
        </transform>
    </transforms>
    <incrementalFilter className="ModifiedSinceFilterStrategy" timestampColumnName="date_time">
        <deletedRowsSource schemaName="cnprcSrc_billing_aud" queryName="q_resource_labor_costing_supply_delete" timestampColumnName="date_time" deletedSourceKeyColumnName="objectid" targetKeyColumnName="objectid"/>
    </incrementalFilter>
    <schedule>
        <!-- run at 1 am every Monday -->
        <cron expression="0 0 1 ? * MON *"/> <!--seconds, minutes, hours, day-of-month, month, day-of-week, year(optional) -->
    </schedule>
</etl>