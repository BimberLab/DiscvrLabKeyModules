                    <ns:fkDbSchema>pipeline</ns:fkDbSchema>
                    <ns:fkTable>Job</ns:fkTable>
                    <ns:fkColumnName>Job</ns:fkColumnName>
                    <ns:fkDisplayColumnName>RowId</ns:fkDisplayColumnName>
                </ns:fk>
