<query xmlns="http://labkey.org/data/xml/query">
    <metadata>
        <tables xmlns="http://labkey.org/data/xml">
            <table tableName="alignment_by_read" tableDbType="TABLE">
                <tableTitle>Alignments, Grouped By Read</tableTitle>
                <pkColumnName>rowids</pkColumnName>
                <columns>
                    <column columnName="analysis_id">
                        <fk>
                          <fkDbSchema>sequenceanalysis</fkDbSchema>
                          <fkTable>sequence_analyses</fkTable>
                          <fkColumnName>rowid</fkColumnName>
                        </fk>
                    </column>
                      <column columnName="numhits">
                          <url>/query/executeQuery.view?
                              schemaName=sequenceanalysis&amp;
                              query.analysis_id~eq=${analysis_id}&amp;
                              query.readname~eq=${readname}&amp;
                              query.queryName=sequence_alignments&amp;
                          </url>
                      </column>
                    <column columnName="RowIds">
                        <isKeyField>true</isKeyField>
                        <isHidden>true</isHidden>
                    </column>
                </columns>
                <buttonBarOptions includeStandardButtons="true">
                    <item requiresSelection="true" text="" insertPosition="end">
                        <onClick>javascript:void(0);</onClick>
                    </item>
                </buttonBarOptions>
            </table>
        </tables>
    </metadata>
</query>
